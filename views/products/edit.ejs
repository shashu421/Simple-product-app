<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= product.Productname %></div>
    <form class="ui form" action="/products/<%= product._id %>?_method=PUT" method="POST">
        <div class="ui form">
            <div class="field">
                <label>Product Name</label>
                <input type="text" name="product[Productname]" value="<%= product.Productname %>">
            </div>
            <div class="field">
              <label>Category</label>
              <select class="ui search dropdown" name="product[Category]">
                <option value="<%= product.Category %>"><%= product.Category %></option>
                <option value="Tshirt">Tshirt</option>
                <option value="Jeans">Jeans</option>
              </select>
            </div>
          </div>
          <div class="field">
            <label>Product Attribute</label>
            <input type="text" name="product[Productattribute]" value="<%= product.Productattribute %>">
        </div>
        <div class="field">
            <label>Price</label>
            <input type="number" name="product[Price]" value="<%= product.Price %>">
        </div>
        <div class="field">
            <label>Discount Price</label>
            <input type="number" name="product[Disprice]" value="<%= product.Disprice %>">
        </div>
        <div class="field">
            <label>Meta description</label>
            <input type="text" name="product[Metadescription]" value="<%= product.Metadescription %>">
        </div>
        <div class="field">
            <label>Tags</label>
            <input type="textarea" name="product[Tags]" value="<%= product.Tags %>">
        </div>
        <div class="field">
            <label>Product description</label>
            <input type="text" name="product[Productdescription]" value="<%= product.Productdescription %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="product[Image]" value="<%= product.Image %>">
        </div>
        <input class = "ui violet big basic button" type="Submit" placeholder="Update">
        <a href="/products"><input class = "ui violet big basic button" type="cancel" value="Cancel"></a>
    </form>
</div>

<%- include("partials/footer") %>

