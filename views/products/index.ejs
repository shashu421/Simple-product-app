<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="new">
        <div class="ui huge header">
            <center><h1 class="ui orange inverted header"> Product page!!</h1></center>
        </div>
        
        <% products.forEach(function(product){ %>
            <div>
                <h3> <%= product.Productname %> </h3>
                <img src = "<%= product.Image %>">
                <h4> Price - <%= product.Price %> /- </h4>
                <a href="/products/<%= product._id %>"><button class="ui primary">Read more</button></a>
                <a href="/products/<%= product._id %>/edit"><button class="ui violet">Edit</button></a>
                <br>
                <br><hr>
            </div>
        <% }); %>
    
    
    </div>
</div>



<%- include("partials/footer") %>