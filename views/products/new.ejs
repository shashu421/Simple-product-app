<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><h1>Add new Product</h1></div>
    <form class="ui form" action="/products/new" method="POST">
        <div class="ui form">
            <div class="field">
                <label>Product Name</label>
                <input type="text" name="product[Productname]" placeholder="Enter the name of Product">
            </div>
            <div class="field">
              <label>Category</label>
              <select class="ui search dropdown" name="product[Category]">
                <option value="">Select category</option>
                <option value="Tshirt">Tshirt</option>
                <option value="Jeans">Jeans</option>
                <option value="Sweater">Sweater</option>
                <option value="Slippers">Slippers</option>
                <option value="Hood">Hood</option>
              </select>
            </div>
          </div>
          <div class="field">
            <label>Product Attribute</label>
            <input type="text" name="product[Productattribute]" placeholder="Enter the name of Product Attribute">
        </div>
        <div class="field">
            <label>Price</label>
            <input type="number" name="product[Price]" placeholder="price">
        </div>
        <div class="field">
            <label>Discount Price</label>
            <input type="number" name="product[Disprice]" placeholder="Discount Price">
        </div>
        <div class="field">
            <label>Meta description</label>
            <input type="text" name="product[Metadescription]" placeholder="Enter some description about the product">
        </div>
        <div class="field">
            <label>Tags</label>
            <input type="textarea" name="product[Tags]" placeholder="include tags">
        </div>
        <div class="field">
            <label>Product description</label>
            <input type="text" name="product[Productdescription]" placeholder="Enter some description about the product">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="product[Image]" placeholder="image">
        </div>
        <input class = "ui violet big basic button" type="Submit">
        <a href="/products"><input class = "ui violet big basic button" type="cancel" value="Cancel"></a>
    </form>
</div>

<%- include("partials/footer") %>